<?xml version="1.0" encoding="UTF-8"?>
<actions>
    <action>
        <actionName>run</actionName>
        <packagings>
            <packaging>jar</packaging>
        </packagings>
        <goals>
            <goal>process-classes</goal>
            <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
        </goals>
        <properties>
            <exec.args>-classpath %classpath com.severaldatabases.MultipleDbApplication</exec.args>
            <exec.executable>java</exec.executable>
        </properties>
    </action>
    <action>
        <actionName>rebuild</actionName>
        <packagings>
            <packaging>*</packaging>
        </packagings>
        <goals>
            <goal>clean</goal>
            <goal>package</goal>
        </goals>
    </action>
    <action>
        <actionName>test</actionName>
        <packagings>
            <packaging>*</packaging>
        </packagings>
        <goals>
            <goal>clean</goal>
            <goal>test</goal>
        </goals>
    </action>
    <action>
        <actionName>CUSTOM-test-profiles-main-test</actionName>
        <displayName>test-profiles-main-test</displayName>
        <goals>
            <goal>clean</goal>
            <goal>test</goal>
        </goals>
        <properties>
            <spring.profiles.active>main,test</spring.profiles.active>
        </properties>
    </action>
    <action>
        <actionName>CUSTOM-test-profiles-main-test</actionName>
        <displayName>test-profiles-other-test</displayName>
        <goals>
            <goal>clean</goal>
            <goal>test</goal>
        </goals>
        <properties>
            <spring.profiles.active>other,test</spring.profiles.active>
        </properties>
    </action>
</actions>
